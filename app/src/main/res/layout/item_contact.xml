<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" android:textColor="@color/black"/>
    <TextView
        android:text="Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        android:textColor="@color/black"/>
    <TextView
        android:text="Fax Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="16dp" android:textColor="@color/black"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txtPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txtEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/txtPhoneNumber" app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber"
        android:layout_marginTop="16dp"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txtfaxNumber"
        app:layout_constraintEnd_toEndOf="@+id/txtEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailAddress"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>